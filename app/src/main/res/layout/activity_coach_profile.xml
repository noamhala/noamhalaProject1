<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".screens.DetailsWorkout">

    <!-- Title -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="פרופיל מאמן"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Coach Name -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Coach name:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/tv_coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- Trainee Name -->
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Phone:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toStartOf="@id/textView12" />

    <TextView
        android:id="@+id/tv_phone_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0527384953"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView15"
        app:layout_constraintEnd_toEndOf="@id/tv_coach_name" />

    <!-- Date -->
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Email:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView15"
        app:layout_constraintStart_toStartOf="@id/textView15" />

    <TextView
        android:id="@+id/tv_email_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@gmail.com"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView17"
        app:layout_constraintEnd_toEndOf="@id/tv_phone_coach" />

    <!-- Time -->
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="City:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintStart_toStartOf="@id/textView17" />

    <TextView
        android:id="@+id/tv_city_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ראשון לציון"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView19"
        app:layout_constraintEnd_toEndOf="@id/tv_email_coach" />

    <!-- Location -->
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Domain:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintStart_toStartOf="@id/textView19" />

    <TextView
        android:id="@+id/tv_domain_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gym"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView20"
        app:layout_constraintEnd_toEndOf="@id/tv_city_coach" />

    <!-- Goals -->
    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Price:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView20"
        app:layout_constraintStart_toStartOf="@id/textView20" />

    <TextView
        android:id="@+id/tv_price_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50$"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView23"
        app:layout_constraintEnd_toEndOf="@id/tv_domain_coach" />

    <!-- Status -->
    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Experience:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView23"
        app:layout_constraintStart_toStartOf="@id/textView23" />

    <TextView
        android:id="@+id/tv_experience_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 years"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView25"
        app:layout_constraintEnd_toEndOf="@id/tv_price_coach" />

    <!-- Save Details Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="שמור פרטים"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:backgroundTint="#00BFFF"
        app:layout_constraintTop_toBottomOf="@id/textView25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View History Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_history_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="צפה בהיסטורית שיעורים"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:backgroundTint="#1E90FF"
        app:layout_constraintTop_toBottomOf="@id/btn_save_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
