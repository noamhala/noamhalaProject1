<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".screens.CoachProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="32dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title_coach_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="פרופיל מאמן"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Field generator -->
        <!-- Label + EditText pairs -->
        <!-- You can copy-paste this block for each field -->

        <!-- Name -->
        <TextView
            android:id="@+id/label_coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Full Name:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_coach_profile" />

        <!-- Phone -->
        <EditText
            android:id="@+id/tv_coach_name"
            android:layout_width="224dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00BFFF"
            android:hint="John Doe"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/label_coach_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/label_coach_name"
            app:layout_constraintTop_toTopOf="@id/label_coach_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/label_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Phone:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_coach_name" />

        <!-- Email -->
        <EditText
            android:id="@+id/tv_phone_coach"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00BFFF"
            android:hint="0501234567"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/label_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/label_phone"
            app:layout_constraintTop_toTopOf="@id/label_phone"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Email:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_coach" />

        <!-- City -->
        <EditText
            android:id="@+id/tv_email_coach"
            android:layout_width="224dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00BFFF"
            android:hint="coach@example.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/label_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/label_email"
            app:layout_constraintTop_toTopOf="@id/label_email"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/label_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="City:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email_coach" />

        <!-- Domain -->

        <EditText
            android:id="@+id/tv_city_coach"
            android:layout_width="206dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00BFFF"
            android:hint="Tel Aviv"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/label_city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toEndOf="@id/label_city"
            app:layout_constraintTop_toTopOf="@id/label_city"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/label_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Domain:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_city_coach" />

        <!-- Price -->

        <EditText
            android:id="@+id/tv_domain_coach"
            android:layout_width="215dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00BFFF"
            android:hint="Yoga"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/label_domain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/label_domain"
            app:layout_constraintTop_toTopOf="@id/label_domain"
            app:layout_constraintVertical_bias="0.619" />

        <TextView
            android:id="@+id/label_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Price:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_domain_coach" />

        <!-- Experience -->
        <EditText
            android:id="@+id/tv_price_coach"
            android:layout_width="209dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00BFFF"
            android:hint="60"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/label_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/label_price"
            app:layout_constraintTop_toTopOf="@id/label_price"
            app:layout_constraintVertical_bias="0.466" />

        <TextView
            android:id="@+id/label_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Experience:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price_coach" />

        <!-- Save Button -->
        <EditText
            android:id="@+id/tv_experience_coach"
            android:layout_width="214dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00BFFF"
            android:hint="7"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/label_experience"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/label_experience"
            app:layout_constraintTop_toTopOf="@id/label_experience"
            app:layout_constraintVertical_bias="1.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="שמור פרטים"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#00BFFF"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_experience_coach" />

        <!-- History Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_history_coach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="צפה בהיסטורית שיעורים"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#1E90FF"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_save_details" />

        <!-- Delete User Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_user"
            android:layout_width="378dp"
            android:layout_height="47dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:text="מחק משתמש"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FF4500"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_history_coach" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
