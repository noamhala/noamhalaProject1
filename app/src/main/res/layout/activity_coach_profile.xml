<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".screens.CoachProfile">

    <!-- Title -->
    <TextView
        android:id="@+id/title_coach_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="פרופיל מאמן"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Name -->
    <TextView
        android:id="@+id/label_coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/title_coach_profile"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tv_coach_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="John Doe"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/label_coach_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- Phone -->
    <TextView
        android:id="@+id/label_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/label_coach_name"
        app:layout_constraintStart_toStartOf="@id/label_coach_name" />

    <EditText
        android:id="@+id/tv_phone_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="0501234567"
        android:inputType="phone"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/label_phone"
        app:layout_constraintEnd_toEndOf="@id/tv_coach_name" />

    <!-- Email -->
    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/label_phone"
        app:layout_constraintStart_toStartOf="@id/label_phone" />

    <EditText
        android:id="@+id/tv_email_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="coach@example.com"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/label_email"
        app:layout_constraintEnd_toEndOf="@id/tv_phone_coach" />

    <!-- City -->
    <TextView
        android:id="@+id/label_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/label_email"
        app:layout_constraintStart_toStartOf="@id/label_email" />

    <EditText
        android:id="@+id/tv_city_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tel Aviv"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/label_city"
        app:layout_constraintEnd_toEndOf="@id/tv_email_coach" />

    <!-- Domain -->
    <TextView
        android:id="@+id/label_domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domain:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/label_city"
        app:layout_constraintStart_toStartOf="@id/label_city" />

    <EditText
        android:id="@+id/tv_domain_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Yoga"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/label_domain"
        app:layout_constraintEnd_toEndOf="@id/tv_city_coach" />

    <!-- Price -->
    <TextView
        android:id="@+id/label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/label_domain"
        app:layout_constraintStart_toStartOf="@id/label_domain" />

    <EditText
        android:id="@+id/tv_price_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="60"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/label_price"
        app:layout_constraintEnd_toEndOf="@id/tv_domain_coach" />

    <!-- Experience -->
    <TextView
        android:id="@+id/label_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/label_price"
        app:layout_constraintStart_toStartOf="@id/label_price" />

    <EditText
        android:id="@+id/tv_experience_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="7"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/label_experience"
        app:layout_constraintEnd_toEndOf="@id/tv_price_coach" />

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="שמור פרטים"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:backgroundTint="#00BFFF"
        app:layout_constraintTop_toBottomOf="@id/label_experience"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- History Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_history_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="צפה בהיסטורית שיעורים"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:backgroundTint="#1E90FF"
        app:layout_constraintTop_toBottomOf="@id/btn_save_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
