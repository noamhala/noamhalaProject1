<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".screens.DetailsWorkout">

    <!-- Title -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="פרופיל מתאמן"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Full Name -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Full Name:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" />

    <EditText
        android:id="@+id/tv_trainee_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="John Doe"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- Phone -->
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Phone:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toStartOf="@id/textView12" />

    <EditText
        android:id="@+id/tv_phone_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="0527384953"
        android:textColor="@android:color/white"
        android:inputType="phone"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView15"
        app:layout_constraintEnd_toEndOf="@id/tv_trainee_name" />

    <!-- Email -->
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Email:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView15"
        app:layout_constraintStart_toStartOf="@id/textView15" />

    <EditText
        android:id="@+id/tv_email_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="user@gmail.com"
        android:textColor="@android:color/white"
        android:inputType="textEmailAddress"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView17"
        app:layout_constraintEnd_toEndOf="@id/tv_phone_trainee" />

    <!-- City -->
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="City:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintStart_toStartOf="@id/textView17" />

    <EditText
        android:id="@+id/tv_city_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ראשון לציון"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView19"
        app:layout_constraintEnd_toEndOf="@id/tv_email_trainee" />

    <!-- Age -->
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Age:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textView19"
        app:layout_constraintTop_toBottomOf="@id/textView19" />

    <EditText
        android:id="@+id/tv_age_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="18"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView20"
        app:layout_constraintEnd_toEndOf="@id/tv_city_trainee" />

    <!-- Height -->
    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Height:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textView20"
        app:layout_constraintTop_toBottomOf="@id/textView20" />

    <EditText
        android:id="@+id/tv_height_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="1.80"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView23"
        app:layout_constraintEnd_toEndOf="@id/tv_age_trainee" />

    <!-- Weight -->
    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Weight:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textView23"
        app:layout_constraintTop_toBottomOf="@id/textView23" />

    <EditText
        android:id="@+id/tv_weight_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="75"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:backgroundTint="#00BFFF"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView25"
        app:layout_constraintEnd_toEndOf="@id/tv_height_trainee" />

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_details_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="שמור פרטים"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:backgroundTint="#00BFFF"
        app:layout_constraintTop_toBottomOf="@id/textView25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- History Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_history_trainee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="צפה בהיסטורית שיעורים"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:backgroundTint="#1E90FF"
        app:layout_constraintTop_toBottomOf="@id/btn_save_details_trainee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
