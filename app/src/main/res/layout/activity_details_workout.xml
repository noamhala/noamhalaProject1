<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".screens.DetailsWorkout">

    <!-- Title -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="פרופיל אימון"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Coach Name -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Coach name:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/tv_trainee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- Trainee Name -->
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Trainee name:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toStartOf="@id/textView12" />

    <TextView
        android:id="@+id/tv_phone_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jane Smith"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView15"
        app:layout_constraintEnd_toEndOf="@id/tv_trainee_name" />

    <!-- Date -->
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Date:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView15"
        app:layout_constraintStart_toStartOf="@id/textView15" />

    <TextView
        android:id="@+id/tv_email_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/06/2025"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView17"
        app:layout_constraintEnd_toEndOf="@id/tv_phone_trainee" />

    <!-- Time -->
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Time:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintStart_toStartOf="@id/textView17" />

    <TextView
        android:id="@+id/tv_city_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:00"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView19"
        app:layout_constraintEnd_toEndOf="@id/tv_email_trainee" />

    <!-- Location -->
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Location:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintStart_toStartOf="@id/textView19" />

    <TextView
        android:id="@+id/tv_age_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gym"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView20"
        app:layout_constraintEnd_toEndOf="@id/tv_city_trainee" />

    <!-- Goals -->
    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Goals:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView20"
        app:layout_constraintStart_toStartOf="@id/textView20" />

    <TextView
        android:id="@+id/tv_height_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build muscle"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView23"
        app:layout_constraintEnd_toEndOf="@id/tv_age_trainee" />

    <!-- Status -->
    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Status:"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textView23"
        app:layout_constraintStart_toStartOf="@id/textView23" />

    <TextView
        android:id="@+id/tv_weight_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/textView25"
        app:layout_constraintEnd_toEndOf="@id/tv_height_trainee" />

</androidx.constraintlayout.widget.ConstraintLayout>
